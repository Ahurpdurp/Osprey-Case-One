@model Client
@{
    ViewData["Title"] = "Home Page";
}

    <div class="text-center">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Client ID #</th>
                    <th scope="col">Company Name</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">City</th>
                    <th scope="col">State</th>
                    <th scope="col">Zip Code</th>
                    <th scope="col">Last Updated</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @{
                    for (var i = 0; i < @Model.Clients.Count; i++)
                    {
                                <tr>
                                    <th scope="row">@Model.Clients[i].ClientId</th>
                                    <td>@Model.Clients[i].CompanyName</td> 
                                    <td>@Model.Clients[i].ContactFirstName</td>
                                    <td>@Model.Clients[i].ContactLastName</td>
                                    <td>@Model.Clients[i].City</td>
                                    <td>@Model.Clients[i].State</td>
                                    <td>@Model.Clients[i].Zip</td>
                                    <td>@Model.Clients[i].LastUpdated</td>
                                    <td>@Html.ActionLink("Edit", "EditClient", "Home", new { id = Model.Clients[i].ClientId,
                                       @class = "btn btn-primary btn-sm" })</td>
                                    <td>@Html.ActionLink("Delete", "DeleteClient", "Home", new {id = Model.Clients[i].ClientId, @class = "btn btn-primary btn-sm" })</td>
                                </tr>
                            }
                            }
                    </tbody>
        </table>
    </div>
